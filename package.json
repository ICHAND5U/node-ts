  "license": "MIT",
  "dependencies": {
    "body-parser": "1.18.3",
    "express": "4.16.3",
    "log4js": "2.8.0",
    "mysql": "2.15.0",
    "promise-mysql": "3.2.1"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "chai-http": "4.0.0",
    "mocha": "5.2.0",
    "nodemon": "1.17.5"
  }
}
