{
  "name": "node-ts-api",
  "version": "1.0.0",
  "scripts": {
    "prod:start": "export NODE_ENV=production && node server/server.js",
    "prod:watch": "export NODE_ENV=production && nodemon server/server.js",
    "dev:start": "node server/server.js",
    "dev:watch": "nodemon server/server.js",
    "test:start": "export NODE_ENV=test && node server/server.js",
    "test:watch": "export NODE_ENV=test && nodemon server/server.js",
    "test": "export NODE_ENV=test && mocha server/**/*.test.js",
    "test-case:watch": "nodemon --exec 'npm test'"
  },
